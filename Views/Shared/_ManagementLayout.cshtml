<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div id="modal-loading">
        <span style="margin: 0 auto; display: block; width: 150px; margin-top: 30%; ">
            <img src="~/Content/ajax-loader.gif" />
        </span>
    </div>
    <div id="page-container">
        <!--main heading area of the page-->
        <div id="header">
            <div class="container header-content">
                <div class="row">
                    <div class="col-md-3 col-xs-3">
                        <!--logo placement-->
                        <div class="logo">
                            <a href="~/">JA Home</a>
                        </div>
                        <!----------------------->
                    </div>
                    <!--main menu list-->
                    <div class="col-md-7 col-xs-7">
                        <div class="main-menu">
                            <ul>
                                <li>
                                    <a id="dashboard" href="~/LandlordManagement/Dashboard">
                                        <span class="glyph-style glyphicon glyphicon-dashboard"></span>Dashboard
                                    </a>
                                </li>
                                <li>
                                    <a href="~/LandlordManagement/Help" id="help">
                                        <span class="glyph-style glyphicon glyphicon-question-sign"></span>Help
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-2 col-xs-2">
                        <div class="sign-register">
                            <ul>
                                <li>@Html.ActionLink("Sign Out", "SignOut", "Accounts") </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!--------------Body Content------------------------>
        <div id="body">
            <div class="container">
                <div class="row">
                    <div class="col-md-3" >
                        @RenderSection("utilities", false)
                        @RenderSection("quickAction", false)
                        @RenderSection("tennants", false)
                    </div>
                    <div class="col-md-9">
                        <!--retrieved is an ajax content-->
                        <div id="retrieved"></div>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-------------------------------------------------->
    <!-------------------Footer-------------------------->
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <table>
                        <tr>
                            <td><a href="~/webinfo/contact">Contact Website Admin</a></td>
                            <td><a href="~/webinfo/howto">How To Use This Service</a></td>
                        </tr>
                        <tr>
                            <td><a href="~/webinfo/privacy">Privacy Policy</a></td>
                        </tr>
                        <tr>
                            <td><a href="~/webinfo/about">About Website</a></td>
                        </tr>
                    </table>
                    <hr />
                    <label>Disclaimer &copy;Jamprops.net</label>
                </div>
            </div>
        </div>
    </div>
    <!-------------------------------------------------->
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-resource.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/ManagementScript.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="~/Scripts/MainScript.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript">
        @RenderSection("pageScript",false)
    </script>
    
</body>
</html>
