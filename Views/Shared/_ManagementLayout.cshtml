<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="https://use.fontawesome.com/9172b7147e.js"></script>
</head>
<body>
    <div id="modal-loading">
        <span style="margin: 0 auto; display: block; width: 150px; margin-top: 30%; ">
            <img src="~/Content/ajax-loader.gif" />
        </span>
    </div>
    <div id="page-container">
        <div id="top-header">
            <div class="container-fluid">
                <!--TODO put image at the top of the page as well as change the color theme-->
                <div class="row">
                    <div class="col-md-3">
                        
                    </div>
                    <div class="col-md-6">
                        <div class="sign-register">
                            <ul>
                                <li>
                                    <a id="dashboard" href="~/LandlordManagement/Dashboard">
                                        <span class="glyph-style glyphicon glyphicon-dashboard"></span>Dashboard
                                    </a>
                                </li>
                                <li>
                                    <a href="~/LandlordManagement/Help" id="help">
                                        <span class="glyph-style glyphicon glyphicon-question-sign"></span>Help
                                    </a>
                                </li>
                                <li><a href="~/webinfo/contact">Contact Website Admin</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 social-icons">
                        <ul>
                            <li>@Html.ActionLink("Sign Out", "SignOut", "Accounts") </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!--------------Body Content------------------------>
        <div id="body">
            <div class="container-fluid">
                <div class="row">
                    <br/>
                    <div class="col-md-1">
                        
                    </div>
                    <div class="col-md-10">
                        <!--retrieved is an ajax content-->
                        <div id="retrieved"></div>
                        @RenderBody()
                    </div>
                    <div class="col-md-1">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-------------------------------------------------->
    <!-------------------Footer-------------------------->
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <table>
                        <tr>
                            <td><a href="~/webinfo/contact">Contact Website Admin</a></td>
                            <td><a href="~/webinfo/howto">How To Use This Service</a></td>
                        </tr>
                        <tr>
                            <td><a href="~/webinfo/privacy">Privacy Policy</a></td>
                        </tr>
                        <tr>
                            <td><a href="~/webinfo/about">About Website</a></td>
                        </tr>
                    </table>
                    <hr />
                    <label>Disclaimer &copy;Jamprops.net</label>
                </div>
            </div>
        </div>
    </div>
    <!-------------------------------------------------->
    <script src="~/Scripts/ManagementScript.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/MainScript.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.2.js"></script>
    <script src="~/signalr/hubs"></script>
    <script type="text/javascript">
        @RenderSection("pageScript",false)
    </script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBkscrDmY_ngoabLcmg6yJuAZio7-Tjf3w&libraries=places"></script>
</body>
</html>
