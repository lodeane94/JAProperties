@model SS.ViewModels.AdvertisePropertyViewModel
@{
    ViewBag.Title = "Advertise Property - Advertise your property here ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section pageScript{
    (function(){
    $.getScript('/Scripts/MainScript.js', function()
    {
    setActiveNavigation('home');
    setJumbotRunContent('How To Advertise');
    setIsCollapsable(true);
    loadAdvertisePropertySubscriptionPeriod();
    });

    $.getScript('/Scripts/PropertiesScript.js',function(){

    });
    })();
}
<script type="text/javascript">
    var jumbotrun = document.getElementById('jumbotron-container');
    jumbotrun.remove();
</script>
@Html.Partial("_ModalPropertyAdvertised")

<!--TODO Generate all property information from database-->
<div class="ctnr-headers">Advertise Your Property</div>
<form id="ad-submission" enctype="multipart/form-data" method="post">
    <div class="prop-upload-info">
        <div style="display:none;" class="error-container"></div>
        <div class="row">
            <div class="col-md-4" id="property-category">
                <div class="content-heading">Select the property category</div>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Property that provides living accommodations for individuals">
                    <div id="RealEstate" class="clickable-box">Real Estate</div>
                </a>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Land spaces on which can be used to create buildings or farming etc.">
                    <div id="Lot" class="clickable-box">Lot</div>
                </a>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Properties that can be used to reduce manual labour">
                    <div id="Machinery" class="clickable-box">Machinery</div>
                </a>
            </div>
            <div class="col-md-4" id="property-purpose">
                <div class="content-heading">Select the purpose of the property</div>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Properties that are used for living purposes">
                    <div id="Residential" class="clickable-box">Residential</div>
                </a>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Properties that are used to generate a profit">
                    <div id="Commercial" class="clickable-box">Commercial</div>
                </a>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Properties that are used for the manufactoring of goods">
                    <div id="Industrial" class="clickable-box">Industrial</div>
                </a>
            </div>
            <div class="col-md-4" id="advertisment-type">
                <div class="content-heading">Select the advertisment type</div>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Properties being sold">
                    <div id="Sale" class="clickable-box">Sale</div>
                </a>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Properties being rented">
                    <div id="Rent" class="clickable-box">Rent</div>
                </a>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Properties being leased">
                    <div id="Lease" class="clickable-box">Lease</div>
                </a>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-4" id="propertytype">
                <div class="content-heading">Select the type of property you want to advertise</div>
                <select disabled class="form-control" id="property-type" name="propertytype"></select>
            </div>
            <div class="col-md-4" id="advertisment-priority">
                <div class="content-heading">Select the advertisment priority</div>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Property advertisments will be shown after high priority advertisments are displayed">
                    <div id="Regular" class="clickable-box">Regular - $0 JMD Monthly</div>
                </a>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Property advertisments will be given high priority, therefore displaying them first in the result set (Featured List)">
                    <div id="AdPro" class="clickable-box">AdPro - $1000 JMD Monthly</div>
                </a>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Property advertisments will be given high priority, therefore displaying them first in the result set (Featured List).
		Properties having this Ad package will also be published on social media networks">
                    <div id="AdPremium" class="clickable-box">AdPremium - $4000 JMD Monthly</div>
                </a>
            </div>
            <div class="col-md-4" id="subscription-type">
                <div class="content-heading">Select the subscription type</div>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Normal subsciption for advertisement of property">
                    <div id="Basic" class="clickable-box">Basic - $1000 JMD Monthly</div>
                </a>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Subcription that can be used by realtors which provides access to the portal that can be used to advertise and modify unlimited amounts of properties for the months specified">
                    <div id="Realtor" class="clickable-box">Realtor - $3000 JMD Monthly</div>
                </a>
                <a href="#" class="clickable-box-link" data-toggle="popover" data-content="Subcription that can be used by landlords which provides access to the portal that can be used to advertise properties for the months specified
		as well as it allows tennants and landlords to communicate">
                    <div id="Landlord" class="clickable-box">Landlord - $5000 JMD Monthly</div>
                </a>
            </div>
        </div>
    </div>
    <br />
    <div class="prop-upload-info">
        <div class="content-heading">Enter your information</div>
        <div class="row">
            <div class="col-md-4">
                <div class="input-group">
                    <input id="firstname" value="@Model.FirstName" type="text" class="form-control" name="firstname" placeholder="First Name" required>
                    <span class="input-group-addon glyphicon-color"><i class="glyphicon glyphicon-user"></i></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <input id="lastname" value="@Model.LastName" type="text" class="form-control" name="lastname" placeholder="Last Name" required>
                    <span class="input-group-addon glyphicon-color"><i class="glyphicon glyphicon-user"></i></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <input id="organization" type="text" class="form-control" name="organization" placeholder="Organization">
                    <span class="input-group-addon glyphicon-color"><i class="glyphicon glyphicon-globe"></i></span>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3">
                <div class="input-group">
                    <input id="cellnum" value="@Model.CellNum" type="text" class="form-control" name="cellnum" placeholder="Cellphone Number" required>
                    <span class="input-group-addon glyphicon-color"><i class="glyphicon glyphicon-phone"></i></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    <input id="email" value="@Model.Email" type="email" class="form-control" name="email" placeholder="Email Address" required>
                    <span class="input-group-addon glyphicon-color"><i class="glyphicon glyphicon-envelope"></i></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    <input id="password" value="@Model.Password" type="password" class="form-control" name="password" placeholder="Password" required>
                    <span class="input-group-addon glyphicon-color"><i class="glyphicon glyphicon-lock"></i></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    <input id="ConfirmPassword" value="@Model.ConfirmPassword" type="password" class="form-control" name="ConfirmPassword" placeholder="Confirm Password" required>
                    <span class="input-group-addon glyphicon-color"><i class="glyphicon glyphicon-lock"></i></span>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <label class="input-group-btn">
                        <span id="property-images" class="flPropertyPics-btn-file btn btn-default">
                            Company Logo <input id="organizationLogo" accept="image/*" name="organizationLogo" type="file" style="display:none;" />
                        </span>
                    </label>
                    <input id="organizationFileNameOutput" type="text" class="form-control" readonly />
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="prop-upload-info">
        <div class="content-heading">Enter your property's information</div>
        <div class="row">
            <div class="col-md-12 prop-upload-advertiser-info">
                <div class="input-group">
                    <input id="title" type="text" class="form-control" name="title" placeholder="Property Title"
                           data-toggle="popover" data-content="This is the heading that your property will display to viewers. Write in short, the property's key features ">
                    <span class="input-group-addon glyphicon-color"><i class="glyphicon glyphicon-tag"></i></span>
                </div>
            </div>
        </div>
        <!--<div class="col-md-12">
            <select class="form-control" id="country" name="country"><option disabled selected value="na">Country</option></select>
        </div>-->
        <br />
        <div class="row">
            <div class="col-md-2">
                <input id="StreetNumber" type="text" class="form-control" name="StreetNumber" placeholder="Street Number">
            </div>
            <div class="col-md-5">
                <div class="input-group">
                    <input id="StreetAddress" value="@Model.StreetAddress" onclick="initAutocomplete('StreetAddress'); geolocate();" type="text" class="form-control" name="streetaddress" placeholder="Street Address" required>
                    <span class="input-group-addon glyphicon-color"><i class="glyphicon glyphicon-map-marker"></i></span>
                </div>
            </div>
            <div class="col-md-5">
                <div class="input-group">
                    <input id="community" onclick="initAutocomplete('community'); geolocate();" value="@Model.Community" type="text" class="form-control" name="community" placeholder="Community" required>
                    <span class="input-group-addon glyphicon-color"><i class="glyphicon glyphicon-map-marker"></i></span>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3">
                <select class="form-control" id="division" name="division"><option selected value="na">Parish</option></select>
            </div>
            <div class="col-md-9">
                <div class="input-group">
                    <input id="nearBy" onclick="initAutocomplete('nearBy'); geolocate();" type="text"
                           class="form-control" name="nearBy" placeholder="Landmark Closest To" data-toggle="popover" data-content="Enter the name of an establishment that is close to your property">
                    <span class="input-group-addon glyphicon-color"><i class="glyphicon glyphicon-map-marker"></i></span>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3">
                <div class="input-group">
                    <input id="price" value="@Model.Price" type="text" class="form-control" name="price" placeholder="Price" required>
                    <span class="input-group-addon glyphicon-color"><i class="glyphicon glyphicon-usd"></i></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    <input id="securitydeposit" value="@Model.SecurityDeposit" type="text" class="form-control" name="securitydeposit" placeholder="Security Deposit">
                    <span class="input-group-addon glyphicon-color"><i class="glyphicon glyphicon-usd"></i></span>
                </div>
            </div>
            <div class="col-md-3">
                <input id="occupancy" value="@Model.Occupancy" disabled type="text" class="form-control" name="occupancy" placeholder="Occupancy" required>
            </div>
            <div class="col-md-3">
                <select disabled class="form-control" id="GenderPreferenceCode" name="GenderPreferenceCode" required>
                    <option disabled selected value="na">Gender Preference</option>
                    <option value="B">Both</option>
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                </select>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3">
                <input id="TotAvailableBathroom" value="" disabled type="text" class="form-control" name="TotAvailableBathroom" placeholder="Total Bathrooms" required>
            </div>
            <br /><br />
            <div class="col-md-3">
                <input id="TotRooms" value="" disabled type="text" class="form-control" name="TotRooms" placeholder="Total Rooms" required>
            </div>
            <div class="col-md-3">
                <input id="area" value="" disabled type="text" class="form-control" name="area" placeholder="Property Area">
            </div>
            <div class="col-md-3">
                <select class="form-control" id="isReviewable" name="isReviewable" required>
                    <option disabled selected value="na">Allow Reviews</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <textarea id="description" rows="4" class="form-control" name="description" placeholder="Property's Description" required>@Model.Description</textarea>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <textarea id="termsagreement" rows="4" class="form-control" name="termsagreement" placeholder="Terms and Agreement for you property">@Model.TermsAgreement</textarea>
            </div>
        </div>
        <br />
        <div class="content-heading">Select the tags that best describes your property</div>
        <div id="property-tags" class="row">
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="content-heading">Subscription Period</div>
                <div class="" data-toggle="popover">
                    <select disabled class="form-control" id="subscription-period" name="subscriptionperiod">
                        <option selected value="">Subscription Period</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="content-heading">Upload images of your property</div>
                <div class="input-group">
                    <label class="input-group-btn">
                        <span id="property-images" class="flPropertyPics-btn-file btn btn-default">
                            Add Files <input id="flPropertyPics" accept="image/*" multiple name="flPropertyPics" type="file" style="display:none;" />
                        </span>
                    </label>
                    <input id="flPropertyPicsFileNameOutput" type="text" class="form-control" readonly />
                </div>
            </div>
        </div>
        <br />
        <div class="row flPropertyPicsImageOutput"></div>
    </div>
    <br />
    <div class="prop-upload-info">
        <div class="content-heading">Total payment</div>
        <div class="row shopping-cart-container"></div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12 AdvertisePropertyBtn">
            <center>
                <button class="btn btn-accent" type="submit" id="AdvertisePropertyBtn">Advertise Property</button>
            </center>
        </div>
    </div>
    <input id="saCoordinateLat" type="hidden" name="saCoordinateLat" />
    <input id="saCoordinateLng" type="hidden" name="saCoordinateLng" />
    <input id="cCoordinateLat" type="hidden" name="cCoordinateLat" />
    <input id="cCoordinateLng" type="hidden" name="cCoordinateLng" />
    <input id="nearByCoordinateLat" type="hidden" name="nearByCoordinateLat" />
    <input id="nearByCoordinateLng" type="hidden" name="nearByCoordinateLng" />
</form>
